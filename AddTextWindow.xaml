<Window x:Class="FilterV1.AddTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Text to Cell Pairs" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="PasteTextBox" Width="450" Margin="5" Text="Paste cell pairs (e.g., value1&#x9;value2)..." GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" PreviewKeyDown="PasteTextBox_PreviewKeyDown"/>
            <Button x:Name="AddButton" Click="AddButton_Click" Content="Add" Width="50" Margin="5"/>
        </StackPanel>

        <!-- Auto-Fill Section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
            <ComboBox x:Name="AutoFillComboBox" Width="150" Margin="5" SelectedIndex="0">
                <ComboBoxItem Content="Custom"/>
                <ComboBoxItem Content="UNIBK1.0"/>
                <ComboBoxItem Content="UNIBK1.5"/>
                <ComboBoxItem Content="UNIBK2.5"/>
                <ComboBoxItem Content="UNIBK4.0"/>
            </ComboBox>
            <Button x:Name="AutoFillButton" Click="AutoFillButton_Click" Content="Auto-Fill" Width="80" Margin="5"/>
        </StackPanel>

        <!-- DataGrid for Cell Pairs and Custom Text -->
        <DataGrid x:Name="CellPairsGrid" Grid.Row="2" Margin="5" AutoGenerateColumns="False" SelectionMode="Extended" CanUserAddRows="False" CanUserDeleteRows="False" CellEditEnding="CellPairsGrid_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Cell" Binding="{Binding FirstCell}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Second Cell" Binding="{Binding SecondCell}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Ledningstype" Binding="{Binding Ledningstype, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="*"/>
                <DataGridTextColumn Header="Hylse side 1" Binding="{Binding HylseSide1, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="*"/>
                <DataGridTextColumn Header="Hylse side 2" Binding="{Binding HylseSide2, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Button Section -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="RemoveButton" Click="RemoveButton_Click" Content="Remove Selected" Width="100" Margin="5"/>
            <Button x:Name="ApplyButton" Click="ApplyButton_Click" Content="Apply" Width="80" Margin="5"/>
            <Button x:Name="CancelButton" Click="CancelButton_Click" Content="Cancel" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>