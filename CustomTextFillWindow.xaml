<Window x:Class="FilterV1.CustomTextFillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Standard tverrsnitt" Height="926" Width="802"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <Border Grid.Row="0" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionText}">
                Define text patterns and select what to fill in columns 2, 3, and 4 when that text is found.
                Patterns are processed in priority order (1 = highest priority).
            </TextBlock>
        </Border>

        <!-- Add Text Pattern Section -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Contains Text:" VerticalAlignment="Center" 
                         Margin="0,0,15,0" Style="{StaticResource SubtitleText}"/>
                <TextBox x:Name="ContainsTextTextBox" Grid.Column="1" Margin="0,0,15,0"
                         Style="{StaticResource ModernTextBox}"
                         ToolTip="Text pattern to search for (e.g., F3)"
                         KeyDown="ContainsTextTextBox_KeyDown"/>

                <Button x:Name="AddPatternButton" Grid.Column="2" Content="Add Pattern" 
                        Click="AddPatternButton_Click" Style="{StaticResource ModernButton}" Margin="0,0,-10,0"/>
            </Grid>
        </Border>

        <!-- Options Section -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Fill Option:" VerticalAlignment="Center" 
                         Margin="0,0,15,0" Style="{StaticResource SubtitleText}"/>
                <ComboBox x:Name="OptionComboBox" Grid.Column="1" Style="{StaticResource ModernComboBox}" SelectedIndex="0">
                    <ComboBoxItem Content="Option 1: UNIBK1.0, HYLSE 1.0, HYLSE 1.0" Tag="1"/>
                    <ComboBoxItem Content="Option 2: UNIBK1.5, HYLSE 1.5, HYLSE 1.5" Tag="2"/>
                    <ComboBoxItem Content="Option 3: UNIBK2.5, HYLSE 2.5, HYLSE 2.5" Tag="3"/>
                    <ComboBoxItem Content="Option 4: UNIBK4.0, HYLSE 4.0, HYLSE 4.0" Tag="4"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Pattern List -->
        <Border Grid.Row="3" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Defined Patterns" 
                         Style="{StaticResource SubtitleText}" Margin="0,0,0,10"/>

                <ListBox x:Name="PatternsListBox" Grid.Row="1" Grid.Column="0" 
                         Margin="0,0,15,0" Style="{StaticResource ModernListBox}"/>

                <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top">
                    <Button x:Name="MoveUpButton" Content="Move Up" Click="MoveUpButton_Click" 
                            Style="{StaticResource SecondaryButton}" Width="109" Margin="0,0,0,5" 
                            ToolTip="Increase priority (move up in processing order)"/>
                    <Button x:Name="MoveDownButton" Content="Move Down" Click="MoveDownButton_Click" 
                            Style="{StaticResource SecondaryButton}" Width="110" Margin="0,0,0,5" 
                            ToolTip="Decrease priority (move down in processing order)"/>
                    <Button x:Name="EditPatternButton" Content="Edit Selected" Click="EditPatternButton_Click" 
                            Style="{StaticResource SecondaryButton}" Width="111" Margin="0,0,0,5" 
                            FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                            ToolTip="Edit the selected pattern"/>
                    <Button x:Name="RemovePatternButton" Content="Remove" Click="RemovePatternButton_Click" 
                            Style="{StaticResource DangerButton}" Width="106" FontWeight="SemiBold"
                            ToolTip="Remove selected pattern"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Preview Section -->
        <Border Grid.Row="4" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Preview:" Style="{StaticResource SubtitleText}" 
                         Margin="0,0,15,10"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Column 2" Style="{StaticResource SubtitleText}" 
                         HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Column 3" Style="{StaticResource SubtitleText}" 
                         HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="Column 4" Style="{StaticResource SubtitleText}" 
                         HorizontalAlignment="Center"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Selected Option:" 
                         Margin="0,0,15,0" VerticalAlignment="Center"/>
                <TextBox x:Name="PreviewCol2" Grid.Row="1" Grid.Column="1" IsReadOnly="True" 
                         Style="{StaticResource ModernTextBox}" Margin="2"/>
                <TextBox x:Name="PreviewCol3" Grid.Row="1" Grid.Column="2" IsReadOnly="True" 
                         Style="{StaticResource ModernTextBox}" Margin="2"/>
                <TextBox x:Name="PreviewCol4" Grid.Row="1" Grid.Column="3" IsReadOnly="True" 
                         Style="{StaticResource ModernTextBox}" Margin="2"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="5" Background="Transparent" Padding="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ApplyFillButton" Content="Apply Text Fill" 
                        Click="ApplyFillButton_Click" Style="{StaticResource SuccessButton}"
                        Width="130" Margin="0,0,10,0"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" 
                        Style="{StaticResource SecondaryButton}" Width="80" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>