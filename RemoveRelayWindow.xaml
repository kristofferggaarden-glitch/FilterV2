<Window x:Class="FilterV1.RemoveRelayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remove Relay Settings" Height="450" Width="550"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,15" FontWeight="Bold">
            Define text patterns for removing cells. When a cell contains the specified text, 
            both that cell and the adjacent cell (to the right) will be removed.
        </TextBlock>

        <!-- Add Pattern Section -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Contains Text:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="ContainsTextTextBox" Grid.Column="1" Margin="0,0,10,0"
                     ToolTip="Text pattern to search for (e.g., RELAY)"
                     KeyDown="ContainsTextTextBox_KeyDown"/>

            <Button x:Name="AddPatternButton" Grid.Column="2" Content="Add Pattern" 
                    Click="AddPatternButton_Click" Width="90"/>
        </Grid>

        <!-- Pattern List -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="PatternsListBox" Grid.Column="0" Margin="0,0,10,0"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <Button x:Name="RemovePatternButton" Content="Remove" Click="RemovePatternButton_Click" 
                        Width="100" Margin="0,0,0,5" ToolTip="Remove selected pattern"/>
            </StackPanel>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="ApplyRemoveButton" Content="Apply Remove Relay" Click="ApplyRemoveButton_Click" 
                    Width="140" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" 
                    Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>