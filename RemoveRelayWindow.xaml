<Window x:Class="FilterV1.RemoveRelayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Irregular Removal Settings" Height="667" Width="604"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <Border Grid.Row="0" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionText}">
                Define text patterns for removing cells. When a cell contains the specified text, 
                that cell and its adjacent cell (both left and right neighbors) will be removed. Only checked patterns will be applied.
            </TextBlock>
        </Border>

        <!-- Add Pattern Section -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Contains Text:" VerticalAlignment="Center" 
                         Margin="0,0,15,0" Style="{StaticResource SubtitleText}"/>
                <TextBox x:Name="ContainsTextTextBox" Grid.Column="1" Margin="0,0,15,0"
                         Style="{StaticResource ModernTextBox}"
                         ToolTip="Text pattern to search for (e.g., RELAY)"
                         KeyDown="ContainsTextTextBox_KeyDown"/>

                <Button x:Name="AddPatternButton" Grid.Column="2" Content="Add Pattern" 
                        Click="AddPatternButton_Click" Style="{StaticResource ModernButton}"/>
            </Grid>
        </Border>

        <!-- Pattern List with Checkboxes -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Defined Patterns" 
                         Style="{StaticResource SubtitleText}" Margin="0,0,0,10"/>

                <ListBox x:Name="PatternsListBox" Grid.Row="1" Grid.Column="0" 
                         Margin="0,0,15,0" Style="{StaticResource ModernListBox}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding DisplayText}" IsChecked="{Binding IsEnabled}" 
                                    Margin="5" FontSize="13"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top">
                    <Button x:Name="SelectAllButton" Content="Select All" Click="SelectAllButton_Click" 
                            Style="{StaticResource SecondaryButton}" Width="105" Margin="0,0,0,5"/>
                    <Button x:Name="DeselectAllButton" Content="Deselect All" Click="DeselectAllButton_Click" 
                            Style="{StaticResource SecondaryButton}" Width="105" Margin="0,0,0,5"/>
                    <Button x:Name="RemovePatternButton" Content="Remove" Click="RemovePatternButton_Click" 
                            Style="{StaticResource DangerButton}" Width="105" 
                            ToolTip="Remove selected pattern"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="Transparent" Padding="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ApplyRemoveButton" Content="Apply Removal" 
                        Click="ApplyRemoveButton_Click" Style="{StaticResource SuccessButton}"
                        Width="170" Margin="0,0,10,0"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" 
                        Style="{StaticResource SecondaryButton}" Width="80" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>