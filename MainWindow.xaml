<Window x:Class="FilterV1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FilterV1"
        Title="Excel Filter Tool" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        MinHeight="800" MinWidth="1400"
        Background="Transparent"
        x:Name="MainWin">

    <Window.Resources>
        <local:GroupConverter x:Key="GroupConverter" />

        <!-- Glassmorphism Button Style -->
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Background" Value="{Binding ElementName=MainWin, Path=ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{Binding ElementName=MainWin, Path=TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="10,6"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{Binding ElementName=MainWin, Path=ButtonHoverBrush}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="3" BlurRadius="15" Opacity="0.3" Direction="270"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Glass Button -->
        <Style x:Key="SuccessGlassButton" TargetType="Button" BasedOn="{StaticResource GlassButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{Binding ElementName=MainWin, Path=SuccessBrush.(SolidColorBrush.Color)}" Offset="0"/>
                        <GradientStop Color="{Binding ElementName=MainWin, Path=SuccessBrush.(SolidColorBrush.Color)}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Danger Glass Button -->
        <Style x:Key="DangerGlassButton" TargetType="Button" BasedOn="{StaticResource GlassButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{Binding ElementName=MainWin, Path=DangerBrush.(SolidColorBrush.Color)}" Offset="0"/>
                        <GradientStop Color="{Binding ElementName=MainWin, Path=DangerBrush.(SolidColorBrush.Color)}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Upload Button -->
        <Style x:Key="UploadButton" TargetType="Button" BasedOn="{StaticResource GlassButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{Binding ElementName=MainWin, Path=AccentBrush.(SolidColorBrush.Color)}" Offset="0"/>
                        <GradientStop Color="{Binding ElementName=MainWin, Path=AccentBrush.(SolidColorBrush.Color)}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Glass Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="8" BlurRadius="32" Opacity="0.1" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Background -->
    <Grid>
        <Grid.Background>
            <RadialGradientBrush x:Name="BackgroundBrush" GradientOrigin="0.3,0.3">
                <GradientStop Color="{Binding ElementName=MainWin, Path=BackgroundColor}" Offset="0"/>
                <GradientStop Color="{Binding ElementName=MainWin, Path=BackgroundColor}" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section - Kompakt -->
        <Border Grid.Row="0" Style="{StaticResource GlassCard}" Margin="20,20,20,10" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📊" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Excel Filter Tool" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" 
                               Foreground="{Binding ElementName=MainWin, Path=TextBrush}"/>
                </StackPanel>

                <!-- File Info -->
                <Border Grid.Column="1" BorderThickness="1" CornerRadius="20" 
                        Padding="15,6" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="250">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.1"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.2"/>
                    </Border.BorderBrush>
                    <TextBlock x:Name="FilePathText" Text="Ingen fil lastet" 
                               Foreground="{Binding ElementName=MainWin, Path=TextBrush}"
                               FontSize="12" TextAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Settings Button -->
                <Button Grid.Column="2" x:Name="SettingsButton" 
                        Click="SettingsButton_Click" 
                        Content="⚙️ Innstillinger" 
                        Style="{StaticResource GlassButton}"
                        Width="120" Height="40" Margin="0,0,10,0"/>

                <!-- Upload Button -->
                <Button Grid.Column="3" x:Name="UploadButton" 
                        Click="UploadButton_Click" 
                        Content="📁 Last opp Excel" 
                        Style="{StaticResource UploadButton}"
                        Width="140" Height="40"/>
            </Grid>
        </Border>

        <!-- Stats Row - Kompakt -->
        <Grid Grid.Row="1" Margin="20,0,20,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Rader -->
            <Border Grid.Column="0" Style="{StaticResource GlassCard}" Margin="0,0,5,0" Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="📊" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Rader" FontSize="9" Foreground="{Binding ElementName=MainWin, Path=TextBrush}" Opacity="0.6"/>
                        <TextBlock x:Name="TotalRowsText" Text="0" FontSize="16" FontWeight="Bold" 
                                 Foreground="{Binding ElementName=MainWin, Path=AccentBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Fjernet -->
            <Border Grid.Column="1" Style="{StaticResource GlassCard}" Margin="5,0,0,0" Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🗑️" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Fjernet" FontSize="9" Foreground="{Binding ElementName=MainWin, Path=TextBrush}" Opacity="0.6"/>
                        <TextBlock x:Name="RemovedRowsText" Text="0" FontSize="16" FontWeight="Bold" 
                                 Foreground="{Binding ElementName=MainWin, Path=DangerBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Control Panel (Left Side) -->
            <StackPanel Grid.Column="0" Margin="20,0,10,0">

                <!-- Quick Actions Card -->
                <Border Style="{StaticResource GlassCard}" Padding="15" Margin="0,0,0,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Border Width="3" Height="16" CornerRadius="2" Margin="0,0,8,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="{Binding ElementName=MainWin, Path=AccentBrush.(SolidColorBrush.Color)}" Offset="0"/>
                                        <GradientStop Color="{Binding ElementName=MainWin, Path=SuccessBrush.(SolidColorBrush.Color)}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="🚀 Hurtighandlinger" FontSize="13" FontWeight="SemiBold" 
                                     Foreground="{Binding ElementName=MainWin, Path=TextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button x:Name="AutoFilterButton" Click="AutoFilterButton_Click" 
                                Style="{StaticResource SuccessGlassButton}"
                                Content="⚡ Auto-Filtrer (Kjør Alt)" Margin="0,0,0,6" HorizontalAlignment="Stretch"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="RemoveAllButton" Click="RemoveAllButton_Click" 
                                    Style="{StaticResource GlassButton}"
                                    Grid.Row="0" Grid.Column="0" Content="1. Fjern =+LV+MX+XS" Margin="0,0,3,5"/>
                            <Button x:Name="RemoveDupesButton" Click="RemoveDupesButton_Click" 
                                    Style="{StaticResource GlassButton}"
                                    Grid.Row="0" Grid.Column="1" Content="2. Fjern Duplikater" Margin="3,0,0,5"/>

                            <Button x:Name="RemoveRisingNumbersButton" Click="RemoveRisingNumbersButton_Click" 
                                    Style="{StaticResource GlassButton}"
                                    Grid.Row="1" Grid.Column="0" Content="3. Stigende Tall" Margin="0,0,3,5"/>
                            <Button x:Name="StarDupesButton" Click="StarDupesButton_Click" 
                                    Style="{StaticResource GlassButton}"
                                    Grid.Row="1" Grid.Column="1" Content="4. ⭐ Stjerne Dupes" Margin="3,0,0,5"/>

                            <Button x:Name="MarkUnmarkedDupesButton" Click="MarkUnmarkedDupesButton_Click" 
                                    Style="{StaticResource GlassButton}"
                                    Grid.Row="2" Grid.Column="0" Content="4b. Marker Dupes" Margin="0,0,3,5"/>
                            <Button x:Name="RemoveCellsButton" Click="RemoveDefinedCellsButton_Click" 
                                    Style="{StaticResource GlassButton}"
                                    Grid.Row="2" Grid.Column="1" Content="5. ✂️ Fjern Celler" Margin="3,0,0,5"/>

                            <Button x:Name="RemoveRelayButton" Click="RemoveRelayButton_Click" 
                                    Style="{StaticResource GlassButton}"
                                    Grid.Row="3" Grid.Column="0" Content="6. 🔌 Uregelmessig" Margin="0,0,3,5"/>
                            <Button x:Name="SortButton" Click="SortButton_Click" 
                                    Style="{StaticResource GlassButton}"
                                    Grid.Row="3" Grid.Column="1" Content="7. 🎯 Sortering" Margin="3,0,0,5"/>

                            <!-- Removed the standard tverrsnitt button as it is no longer needed.  The
                                 custom cross section button now occupies the entire row and has been
                                 renumbered accordingly. -->
                            <Button x:Name="CustomCrossSectionButton" Click="CustomCrossSectionButton_Click"
                                    Style="{StaticResource GlassButton}"
                                    Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="8. Egen Tverrsnitt" Margin="0,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Process Raw Data Card -->
                <Border Style="{StaticResource GlassCard}" Padding="15" Margin="0,0,0,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <Border Width="3" Height="16" CornerRadius="2" Margin="0,0,8,0" Background="{Binding ElementName=MainWin, Path=SuccessBrush}"/>
                            <TextBlock Text="📊 Rådata Prosessering" FontSize="13" FontWeight="SemiBold" 
                                     Foreground="{Binding ElementName=MainWin, Path=TextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button x:Name="ProcessRawDataButton" Click="ProcessRawDataButton_Click" 
                                Style="{StaticResource SuccessGlassButton}"
                                Content="🚀 Prosesser Rådata" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- Additional Operations Card -->
                <Border Style="{StaticResource GlassCard}" Padding="15" Margin="0,0,0,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <Border Width="3" Height="16" CornerRadius="2" Margin="0,0,8,0" Background="Orange"/>
                            <TextBlock Text="🛠️ Tilleggsfunksjoner" FontSize="13" FontWeight="SemiBold" 
                                     Foreground="{Binding ElementName=MainWin, Path=TextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="ReorganizeCellsButton" Click="ReorganizeCellsButton_Click" 
                                    Style="{StaticResource GlassButton}"
                                    Grid.Column="0" Content="🔄 Reorganiser" Margin="0,0,3,0"/>
                            <Button x:Name="ConvertToDurapartButton" Click="ConvertToDurapartButton_Click" 
                                    Style="{StaticResource GlassButton}"
                                    Grid.Column="1" Content="🔀 Konverter til Durapart" Margin="3,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Controls Card -->
                <Border Style="{StaticResource GlassCard}" Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <Border Width="3" Height="16" CornerRadius="2" Margin="0,0,8,0" Background="{Binding ElementName=MainWin, Path=DangerBrush}"/>
                            <TextBlock Text="🛠️ Kontroller" FontSize="13" FontWeight="SemiBold" 
                                     Foreground="{Binding ElementName=MainWin, Path=TextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="UndoButton" Click="UndoButton_Click" 
                                    Style="{StaticResource DangerGlassButton}"
                                    Grid.Column="0" Content="↩️ Angre" Margin="0,0,3,0"/>
                            <Button x:Name="SaveButton" Click="SaveButton_Click" 
                                    Style="{StaticResource SuccessGlassButton}"
                                    Grid.Column="1" Content="💾 Lagre" Margin="3,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Data Area (Right Side) - STØRRE -->
            <Border Grid.Column="1" Style="{StaticResource GlassCard}" Margin="10,0,20,0" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Data Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Width="3" Height="18" CornerRadius="2" Margin="0,0,8,0" Background="{Binding ElementName=MainWin, Path=AccentBrush}"/>
                        <TextBlock Text="📋 Data Forhåndsvisning" FontSize="16" FontWeight="SemiBold" 
                                 Foreground="{Binding ElementName=MainWin, Path=TextBrush}" VerticalAlignment="Center"/>
                        <TextBlock x:Name="RowCountText" Text="0 rader" HorizontalAlignment="Right"
                                 FontSize="12" Foreground="{Binding ElementName=MainWin, Path=TextBrush}" Opacity="0.6" 
                                 Margin="20,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Kompakt Search Bar -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,8">
                        <TextBlock Text="🔍" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0" 
                                 Foreground="{Binding ElementName=MainWin, Path=TextBrush}" Opacity="0.7"/>
                        <Border Background="White" CornerRadius="6" Padding="0">
                            <TextBox x:Name="DataSearchTextBox" Width="180" Height="26"
                                     BorderThickness="0" Background="Transparent" Foreground="Black"
                                     VerticalContentAlignment="Center" TextChanged="DataSearchTextBox_TextChanged"
                                     FontSize="11" Padding="8,4"/>
                        </Border>
                        <TextBlock x:Name="SearchResultsText" Text="" 
                                 Foreground="{Binding ElementName=MainWin, Path=TextBrush}" Opacity="0.6"
                                 FontSize="10" VerticalAlignment="Center" Margin="6,0,6,0"/>
                        <Button x:Name="ClearSearchButton" Content="✕" Click="ClearSearchButton_Click"
                                Style="{StaticResource GlassButton}" Width="26" Height="26" Padding="0" FontSize="10"/>
                    </StackPanel>

                    <!-- Data Preview Area -->
                    <Border Grid.Row="2" BorderThickness="2" CornerRadius="12" Padding="15">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="White" Opacity="0.2"/>
                        </Border.BorderBrush>
                        <Border.Background>
                            <SolidColorBrush Color="Black" Opacity="0.2"/>
                        </Border.Background>

                        <Grid>
                            <!-- Empty State -->
                            <StackPanel x:Name="EmptyState" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible">
                                <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"
                                         Foreground="{Binding ElementName=MainWin, Path=TextBrush}" Opacity="0.5"/>
                                <TextBlock Text="Last opp Excel-fil for å starte" FontSize="14" HorizontalAlignment="Center"
                                         Foreground="{Binding ElementName=MainWin, Path=TextBrush}" Opacity="0.5"/>
                            </StackPanel>

                            <!-- DataGrid -->
                            <DataGrid x:Name="ExcelDataGrid" AutoGenerateColumns="True" CanUserAddRows="False"
                                      GridLinesVisibility="All" HorizontalGridLinesBrush="#33FFFFFF"
                                      VerticalGridLinesBrush="#33FFFFFF" Background="Transparent"
                                      BorderThickness="0" 
                                      Foreground="{Binding ElementName=MainWin, Path=TextBrush}" 
                                      Visibility="Collapsed"
                                      FontSize="{Binding ElementName=MainWin, Path=DataGridFontSize}"
                                      PreviewKeyDown="ExcelDataGrid_PreviewKeyDown">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="{Binding [6], Converter={StaticResource GroupConverter}}"/>
                                        <Setter Property="Height" Value="32"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="White" Opacity="0.1"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="White" Opacity="0.1"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground" Value="{Binding ElementName=MainWin, Path=TextBrush}"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                    </Style>
                                </DataGrid.Resources>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar - Kompakt -->
        <Border Grid.Row="3" Style="{StaticResource GlassCard}" Margin="20,0,20,20" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="6" Height="6" Margin="0,0,6,0">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding ElementName=MainWin, Path=SuccessBrush.(SolidColorBrush.Color)}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock x:Name="StatusText" Text="Klar" 
                               Foreground="{Binding ElementName=MainWin, Path=TextBrush}" 
                               VerticalAlignment="Center" FontSize="11"/>
                </StackPanel>
                <TextBlock Grid.Column="1" Text="v2.0" 
                           Foreground="{Binding ElementName=MainWin, Path=TextBrush}" 
                           Opacity="0.5" VerticalAlignment="Center" FontSize="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>