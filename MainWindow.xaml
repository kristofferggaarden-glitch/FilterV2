<Window x:Class="FilterV1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FilterV1"
        Title="Excel Filter Tool" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- File Upload Section -->
            <RowDefinition Height="Auto"/>
            <!-- Control Buttons -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Status Text -->
        </Grid.RowDefinitions>

        <!-- File Upload Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button x:Name="UploadButton" Click="UploadButton_Click" Content="Upload" Width="100" Margin="5"/>
            <TextBox x:Name="FilePathText" IsReadOnly="True" Width="400" Margin="5"/>
        </StackPanel>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
            <Button x:Name="RemoveEqualsButton" Click="RemoveEqualsButton_Click" Content="Remove =" Width="100" Margin="5"/>
            <Button x:Name="RemoveLVButton" Click="RemoveLVButton_Click" Content="Remove +LV" Width="100" Margin="5"/>
            <Button x:Name="RemoveXSButton" Click="RemoveXSButton_Click" Content="Remove XS" Width="100" Margin="5"/>
            <Button x:Name="RemoveMXButton" Click="RemoveMXButton_Click" Content="Remove MX" Width="100" Margin="5"/>
            <Button x:Name="RemoveRisingNumbersButton" Click="RemoveRisingNumbersButton_Click" Content="Remove Rising Numbers" Width="150" Margin="5"/>
            <Button x:Name="RemoveCellsButton" Click="RemoveDefinedCellsButton_Click" Content="Remove Cells" Width="120" Margin="5"/>
            <Button x:Name="AddTextButton" Click="AddTextButton_Click" Content="Add Text" Width="120" Margin="5"/>
            <Button x:Name="RemoveDupesButton" Click="RemoveDupesButton_Click" Content="Remove Dupes" Width="100" Margin="5"/>
            <Button x:Name="SortButton" Click="SortButton_Click" Content="Sort" Width="100" Margin="5"/>
            <Button x:Name="UndoButton" Click="UndoButton_Click" Content="Undo" Width="100" Margin="5"/>
            <Button x:Name="SaveButton" Click="SaveButton_Click" Content="Save" Width="100" Margin="5"/>
        </StackPanel>

        <!-- DataGrid for Excel Data -->
        <DataGrid x:Name="ExcelDataGrid" Grid.Row="2" Margin="5" AutoGenerateColumns="True" CanUserAddRows="False">
            <DataGrid.Resources>
                <local:GroupConverter x:Key="GroupConverter" />
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{Binding [6], Converter={StaticResource GroupConverter}}" />
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <!-- Status Text -->
        <TextBlock x:Name="StatusText" Grid.Row="3" Margin="5" VerticalAlignment="Bottom"/>
    </Grid>
</Window>