<!--MarkUnmarkedDupesWindow.xaml-->
<Window x:Class="FilterV1.MarkUnmarkedDupesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Marker Umerkede Dupes" Height="600" Width="622"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <Border Grid.Row="0" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionText}">
                Marker duplikater som ikke har stjerne (*) med gul farge i DataGrid. Definér tekstmønstre 
                som må være i cellen for at duplikater skal markeres. Kun aktiverte mønstre brukes.
            </TextBlock>
        </Border>

        <!-- Add Pattern Section -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Tekstmønster:" VerticalAlignment="Center" 
                         Margin="0,0,15,0" Style="{StaticResource SubtitleText}"/>
                <TextBox x:Name="PatternTextBox" Grid.Column="1" Margin="0,0,15,0"
                         Style="{StaticResource ModernTextBox}"
                         ToolTip="F.eks. 'X' for alle celler som inneholder X"
                         KeyDown="PatternTextBox_KeyDown"/>

                <Button x:Name="AddPatternButton" Grid.Column="2" Content="Legg til" 
                        Click="AddPatternButton_Click" Style="{StaticResource ModernButton}"/>
            </Grid>
        </Border>

        <!-- Pattern List with Checkboxes -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Definerte mønstre" 
                         Style="{StaticResource SubtitleText}" Margin="0,0,0,10"/>

                <ListBox x:Name="PatternsListBox" Grid.Row="1" Grid.Column="0" 
                         Margin="0,0,15,0" Style="{StaticResource ModernListBox}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding DisplayText}" IsChecked="{Binding IsEnabled}" 
                                    Margin="5" FontSize="13"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top">
                    <Button x:Name="SelectAllButton" Content="Aktiver alle" Click="SelectAllButton_Click" 
                            Style="{StaticResource SecondaryButton}" Width="105" Margin="0,0,0,5"/>
                    <Button x:Name="DeselectAllButton" Content="Deaktiver alle" Click="DeselectAllButton_Click" 
                            Style="{StaticResource SecondaryButton}" Width="105" Margin="0,0,0,5"/>
                    <Button x:Name="RemovePatternButton" Content="Fjern" Click="RemovePatternButton_Click" 
                            Style="{StaticResource DangerButton}" Width="105"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="Transparent" Padding="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ApplyMarkingButton" Content="Marker Dupes" 
                        Click="ApplyMarkingButton_Click" Style="{StaticResource SuccessButton}"
                        Width="120" Margin="0,0,10,0"/>
                <Button x:Name="CancelButton" Content="Avbryt" Click="CancelButton_Click" 
                        Style="{StaticResource SecondaryButton}" Width="80" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>