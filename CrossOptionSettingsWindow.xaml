<Window x:Class="FilterV1.CrossOptionSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rediger tverrsnitt-knapper"
        Height="450" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- DataGrid displaying cross options -->
        <DataGrid x:Name="OptionsGrid" Grid.Row="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  SelectionMode="Extended"
                  IsReadOnly="False"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                  RowHeaderWidth="0"
                  Background="White"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tast" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Visningsnavn" Binding="{Binding Label}" Width="150"/>
                <DataGridTextColumn Header="Kol. 2" Binding="{Binding Col2}" Width="*"/>
                <DataGridTextColumn Header="Kol. 3" Binding="{Binding Col3}" Width="*"/>
                <DataGridTextColumn Header="Kol. 4" Binding="{Binding Col4}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="AddButton" Content="Legg til" Width="100" Click="AddButton_Click"
                    Style="{StaticResource ModernButton}"/>
            <Button x:Name="RemoveButton" Content="Fjern valgte" Width="120" Margin="10,0,0,0"
                    Click="RemoveButton_Click" Style="{StaticResource DangerButton}"/>
            <Button x:Name="SaveButton" Content="Lagre" Width="100" Margin="20,0,0,0"
                    Click="SaveButton_Click" Style="{StaticResource SuccessButton}"/>
            <Button x:Name="CancelButton" Content="Avbryt" Width="80" Margin="10,0,0,0"
                    Click="CancelButton_Click" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>