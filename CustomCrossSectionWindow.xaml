<Window x:Class="FilterV1.CustomCrossSectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Egendefinert tverrsnitt" Height="680" Width="880"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <!--
        This window mirrors the look and feel of the "Remove Cell Pairs" dialog.  Users can paste
        two columns of text (typically column 5 and column 6 from either Excel or the app's data
        preview) and define custom cross‑sections (tverrsnitt) for those pairs.  Multi‑row
        selection is supported, and tverrsnitt can be assigned via keyboard shortcuts (Ctrl+1..4)
        or the context menu.  The bottom panel provides actions to remove selected rows, apply
        the defined mappings, or cancel.
    -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Instructions card -->
            <RowDefinition Height="Auto"/>
            <!-- Paste & controls card -->
            <RowDefinition Height="Auto"/>
            <!-- Data grid card -->
            <RowDefinition Height="*"/>
            <!-- Action buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instruction Section -->
        <Border Grid.Row="0" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <TextBlock TextWrapping="Wrap"
                       Style="{StaticResource DescriptionText}"
                       Text="Lim inn to kolonner (kol. 5 og 6) fra Excel eller dataforhåndsvisningen. Marker rader og bruk Ctrl+1 (1.0 mm²), Ctrl+2 (1.5 mm²), Ctrl+3 (2.5 mm²) eller Ctrl+4 (4.0 mm²) for å sette tverrsnitt."/>
        </Border>

        <!-- Input Section -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="PasteTextBox"
                         Width="400" Margin="0,0,15,0"
                         Style="{StaticResource ModernTextBox}"
                         Text="Paste cell pairs here..."
                         GotFocus="TextBox_GotFocus"
                         LostFocus="TextBox_LostFocus"
                         PreviewKeyDown="PasteTextBox_PreviewKeyDown"
                         KeyDown="PasteTextBox_KeyDown"
                         ToolTip="Lim inn to kolonner adskilt med TAB, semikolon eller komma. Trykk Enter for å legge til."/>
                <Button x:Name="AddButton" Click="AddButton_Click" Content="Add Pairs"
                        Style="{StaticResource ModernButton}" Width="100"/>
                <Button x:Name="ClearButton" Click="ClearButton_Click" Content="Clear"
                        Style="{StaticResource SecondaryButton}" Width="80" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Custom Cross Section Mappings"
                           Style="{StaticResource SubtitleText}"
                           Margin="0,0,0,10"/>

                <DataGrid x:Name="CrossGrid" Grid.Row="1"
                          Style="{StaticResource ModernDataGrid}"
                          AutoGenerateColumns="False"
                          SelectionMode="Extended"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                          Background="White"
                          KeyDown="CrossGrid_KeyDown">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Column 5 Contains" Binding="{Binding Col5Text}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Column 6 Contains" Binding="{Binding Col6Text}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridComboBoxColumn Header="Tverrsnitt"
                                                Width="180"
                                                SelectedValueBinding="{Binding SelectedOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                SelectedValuePath="Value"
                                                DisplayMemberPath="Label">
                            <DataGridComboBoxColumn.ElementStyle>
                                <Style TargetType="ComboBox">
                                    <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}"/>
                                    <Setter Property="IsHitTestVisible" Value="False"/>
                                    <Setter Property="Focusable" Value="False"/>
                                </Style>
                            </DataGridComboBoxColumn.ElementStyle>
                            <DataGridComboBoxColumn.EditingElementStyle>
                                <Style TargetType="ComboBox">
                                    <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Tag}"/>
                                    <Setter Property="SelectedValuePath" Value="Value"/>
                                    <Setter Property="DisplayMemberPath" Value="Label"/>
                                </Style>
                            </DataGridComboBoxColumn.EditingElementStyle>
                        </DataGridComboBoxColumn>
                    </DataGrid.Columns>
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Set 1.0 mm² (Ctrl+1)" Click="SetGauge1_Click"/>
                            <MenuItem Header="Set 1.5 mm² (Ctrl+2)" Click="SetGauge15_Click"/>
                            <MenuItem Header="Set 2.5 mm² (Ctrl+3)" Click="SetGauge25_Click"/>
                            <MenuItem Header="Set 4.0 mm² (Ctrl+4)" Click="SetGauge40_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="Transparent" Padding="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="RemoveButton" Click="RemoveButton_Click" Content="Remove Selected"
                        Style="{StaticResource DangerButton}" Width="137" Margin="0,0,10,0"/>
                <Button x:Name="ApplyButton" Click="ApplyButton_Click" Content="Apply Custom"
                        Style="{StaticResource SuccessButton}" Width="120" Margin="0,0,10,0"/>
                <Button x:Name="CancelButton" Click="CancelButton_Click" Content="Cancel"
                        Style="{StaticResource SecondaryButton}" Width="80"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>