<Window x:Class="FilterV1.CustomCrossSectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Egendefinert tverrsnitt" Height="700" Width="850"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Instructions -->
        <Border Grid.Row="0" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionText}">
                Lim inn to kolonner med tekst (Kolonne 5 og 6) fra Excel eller programmet. Du kan lime inn flere rader samtidig. For hver rad kan du velge et tverrsnitt.
            </TextBlock>
        </Border>
        <!-- Input Section -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="PasteTextBox" Width="400" Margin="0,0,15,0" 
                         Style="{StaticResource ModernTextBox}"
                         Text="Lim inn celler her..."
                         GotFocus="TextBox_GotFocus"
                         LostFocus="TextBox_LostFocus"
                         PreviewKeyDown="PasteTextBox_PreviewKeyDown"
                         KeyDown="PasteTextBox_KeyDown"
                         ToolTip="Lim inn to kolonner (Kolonne 5 TAB Kolonne 6). Enter for å legge til."/>
                <Button x:Name="AddButton" Click="AddButton_Click" Content="Legg til" 
                        Style="{StaticResource ModernButton}" Width="100"/>
            </StackPanel>
        </Border>
        <!-- DataGrid Section -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Egendefinerte rader" 
                           Style="{StaticResource SubtitleText}" Margin="0,0,0,10"/>
                <DataGrid x:Name="CrossRowsGrid" Grid.Row="1" 
                          Style="{StaticResource ModernDataGrid}"
                          AutoGenerateColumns="False"
                          SelectionMode="Extended"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                          Background="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Kolonne 5 tekst" Binding="{Binding Col5Text}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Kolonne 6 tekst" Binding="{Binding Col6Text}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Tverrsnitt" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedValue="{Binding SelectedOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120">
                                        <ComboBoxItem Content="1: UNIBK1.0/HYLSE1.0/HYLSE1.0" Tag="1"/>
                                        <ComboBoxItem Content="2: UNIBK1.5/HYLSE1.5/HYLSE1.5" Tag="2"/>
                                        <ComboBoxItem Content="3: UNIBK2.5/HYLSE2.5/HYLSE2.5" Tag="3"/>
                                        <ComboBoxItem Content="4: UNIBK4.0/HYLSE4.0/HYLSE4.0" Tag="4"/>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        <!-- Bottom Buttons -->
        <Border Grid.Row="3" Background="Transparent" Padding="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="RemoveSelectedButton" Content="Fjern valgte" Click="RemoveSelectedButton_Click" 
                        Style="{StaticResource DangerButton}" Width="120" Margin="0,0,10,0"/>
                <Button x:Name="ClearAllButton" Content="Tøm alle" Click="ClearAllButton_Click" 
                        Style="{StaticResource SecondaryButton}" Width="90" Margin="0,0,10,0"/>
                <Button x:Name="ApplyButton" Content="Bruk" Click="ApplyButton_Click" 
                        Style="{StaticResource SuccessButton}" Width="80" Margin="0,0,10,0"/>
                <Button x:Name="CancelButton" Content="Avbryt" Click="CancelButton_Click" 
                        Style="{StaticResource SecondaryButton}" Width="80"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>