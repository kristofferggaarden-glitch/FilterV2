<Window x:Class="FilterV1.CustomGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Group Settings" Height="864" Width="772"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <Border Grid.Row="0" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionText}">
                Define text patterns for grouping. Rows containing the specified text in columns 5 or 6 will be grouped together.
                Groups are processed in priority order (1 = highest priority).
            </TextBlock>
        </Border>

        <!-- Add Group Section -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Contains Text:" VerticalAlignment="Center" 
                         Margin="0,0,15,0" Style="{StaticResource SubtitleText}"/>
                <TextBox x:Name="ContainsTextTextBox" Grid.Column="1" Margin="0,0,15,0"
                         Style="{StaticResource ModernTextBox}"
                         ToolTip="Text that must be contained in column 5 or 6 for grouping"
                         KeyDown="ContainsTextTextBox_KeyDown"/>

                <Button x:Name="AddGroupButton" Grid.Column="2" Content="Add Group" 
                        Click="AddGroupButton_Click" Style="{StaticResource ModernButton}" Width="100"/>
            </Grid>
        </Border>

        <!-- Groups List -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Margin="0,0,0,15" Padding="15">
            <Grid>
                <!-- Row 0: Header -->
                <!-- Row 1: Search bar for filtering groups -->
                <!-- Row 2: Group list and controls -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Defined Groups" 
                         Style="{StaticResource SubtitleText}" Margin="0,0,0,10"/>

                <!-- Search bar -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"
                               Style="{StaticResource DescriptionText}"/>
                    <TextBox x:Name="SearchTextBox" Width="200"
                             Style="{StaticResource ModernTextBox}"
                             ToolTip="Filter groups"
                             TextChanged="SearchTextBox_TextChanged"/>
                </StackPanel>

                <!-- Group list -->
                <ListBox x:Name="GroupsListBox" Grid.Row="2" Grid.Column="0" 
                         Margin="0,0,15,0" Style="{StaticResource ModernListBox}"/>

                <!-- Controls -->
                <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Top">
                    <Button x:Name="MoveUpButton" Content="Move Up" Click="MoveUpButton_Click" 
                            Style="{StaticResource SecondaryButton}" Width="100" Margin="0,0,0,8" 
                            ToolTip="Increase priority (move up in sort order)"/>
                    <Button x:Name="MoveDownButton" Content="Move Down" Click="MoveDownButton_Click" 
                            Style="{StaticResource SecondaryButton}" Width="106" Margin="0,0,0,8" 
                            ToolTip="Decrease priority (move down in sort order)"/>
                    <Button x:Name="RemoveGroupButton" Content="Remove" Click="RemoveGroupButton_Click" 
                            Style="{StaticResource DangerButton}" Width="100" Margin="0,0,0,8" 
                            ToolTip="Remove selected group"/>
                    <!-- New controls for moving multiple items to a specific priority -->
                    <TextBlock Text="Move to priority:" Margin="0,10,0,5" Style="{StaticResource DescriptionText}"/>
                    <TextBox x:Name="MoveToPriorityTextBox" Width="80" Margin="0,0,0,5" 
                             Style="{StaticResource ModernTextBox}" ToolTip="Enter the target priority for selected groups"/>
                    <Button x:Name="SetPriorityButton" Content="Set Priority" Width="106" 
                            Style="{StaticResource SecondaryButton}" Click="SetPriorityButton_Click" 
                            ToolTip="Move selected groups to the specified priority"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Instructions for existing groups -->
        <Border Grid.Row="3" Background="Transparent" Padding="0,0,0,10">
            <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionText}" 
                     FontStyle="Italic" FontSize="12" Opacity="0.8">
                Priority text will always be moved to column 5 (left side). Press Enter in the text box to quickly add groups.
            </TextBlock>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="4" Background="Transparent" Padding="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ApplyGroupsButton" Content="Apply Groups &amp; Sort" 
                        Click="ApplyGroupsButton_Click" Style="{StaticResource SuccessButton}"
                        Width="165" Margin="0,0,10,0"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" 
                        Style="{StaticResource SecondaryButton}" Width="80" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>