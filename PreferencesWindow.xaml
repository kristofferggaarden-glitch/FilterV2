<Window x:Class="FilterV1.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚙️ Tilpass Utseende" Height="750" Width="650"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a2e">

    <Window.Resources>
        <Style x:Key="PrefsButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#00d4ff" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#00d4ff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#00d4ff"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="⚙️ Innstillinger" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
            <TextBlock Text="Tilpass farger, modus og skriftstørrelse" FontSize="13" Foreground="#00d4ff" Opacity="0.8"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Dark/Light Mode Toggle -->
                <Border Background="#16213e" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🌓 MODUS" FontSize="12" Foreground="White" Opacity="0.6" 
                                 FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="DarkModeButton" Click="DarkModeButton_Click" Grid.Column="0" Margin="0,0,5,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource PrefsButton}">
                                        <Setter Property="Background" Value="#2c3e50"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </Button.Style>
                                <StackPanel>
                                    <TextBlock Text="🌙 Dark Mode" FontWeight="Bold" FontSize="13"/>
                                    <TextBlock Text="Mørk bakgrunn" FontSize="10" Opacity="0.8"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="LightModeButton" Click="LightModeButton_Click" Grid.Column="1" Margin="5,0,0,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource PrefsButton}">
                                        <Setter Property="Background" Value="#ecf0f1"/>
                                        <Setter Property="Foreground" Value="#2c3e50"/>
                                    </Style>
                                </Button.Style>
                                <StackPanel>
                                    <TextBlock Text="☀️ Light Mode" FontWeight="Bold" FontSize="13"/>
                                    <TextBlock Text="Lys bakgrunn" FontSize="10" Opacity="0.8"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Font Size Section -->
                <Border Background="#16213e" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="📏 SKRIFTSTØRRELSE" FontSize="12" Foreground="White" Opacity="0.6" 
                                 FontWeight="Bold" Margin="0,0,0,15"/>

                        <TextBlock Text="Data Grid Font:" Foreground="White" FontSize="13" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Slider x:Name="FontSizeSlider" Minimum="10" Maximum="20" Value="13" 
                                    Width="350" TickFrequency="1" IsSnapToTickEnabled="True" 
                                    VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBlock x:Name="FontSizeDisplay" Text="13 px" Foreground="#00d4ff" 
                                     FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="💡 Tips: Større font gjør data lettere å lese" FontSize="10" 
                                 Foreground="White" Opacity="0.4" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- Accent Color Themes -->
                <Border Background="#16213e" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🎨 ACCENT FARGER" FontSize="12" Foreground="White" Opacity="0.6" 
                                 FontWeight="Bold" Margin="0,0,0,15"/>

                        <TextBlock Text="Velg hovedfarge (knapper og detaljer):" Foreground="White" FontSize="13" Margin="0,0,0,10"/>

                        <UniformGrid Columns="3" Rows="2">
                            <!-- Cyan -->
                            <Button x:Name="Accent1Button" Click="Accent1Button_Click" Margin="0,0,5,5">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource PrefsButton}">
                                        <Setter Property="Background" Value="#00d4ff"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="💎 Cyan" FontWeight="Bold"/>
                            </Button>

                            <!-- Purple -->
                            <Button x:Name="Accent2Button" Click="Accent2Button_Click" Margin="2.5,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource PrefsButton}">
                                        <Setter Property="Background" Value="#a855f7"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="💜 Lilla" FontWeight="Bold"/>
                            </Button>

                            <!-- Green -->
                            <Button x:Name="Accent3Button" Click="Accent3Button_Click" Margin="5,0,0,5">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource PrefsButton}">
                                        <Setter Property="Background" Value="#10b981"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="💚 Grønn" FontWeight="Bold"/>
                            </Button>

                            <!-- Orange -->
                            <Button x:Name="Accent4Button" Click="Accent4Button_Click" Margin="0,0,5,5">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource PrefsButton}">
                                        <Setter Property="Background" Value="#f97316"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="🧡 Oransje" FontWeight="Bold"/>
                            </Button>

                            <!-- Pink -->
                            <Button x:Name="Accent5Button" Click="Accent5Button_Click" Margin="2.5,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource PrefsButton}">
                                        <Setter Property="Background" Value="#ec4899"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="💗 Rosa" FontWeight="Bold"/>
                            </Button>

                            <!-- Blue -->
                            <Button x:Name="Accent6Button" Click="Accent6Button_Click" Margin="5,0,0,5">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource PrefsButton}">
                                        <Setter Property="Background" Value="#3b82f6"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="💙 Blå" FontWeight="Bold"/>
                            </Button>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <!-- Preview -->
                <Border Background="#16213e" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="👁️ FORHÅNDSVISNING" FontSize="12" Foreground="White" Opacity="0.6" 
                                 FontWeight="Bold" Margin="0,0,0,15"/>

                        <Border Background="#0f3460" CornerRadius="8" Padding="15">
                            <StackPanel>
                                <TextBlock x:Name="PreviewAccentText" Text="Dette er accent-fargen" 
                                         Foreground="#00d4ff" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                                <TextBlock x:Name="PreviewDataText" Text="Dette er tekst-farge" 
                                         Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="✅ Suksess" Foreground="#00ff88" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock Text="❌ Fare" Foreground="#ff4757" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="Transparent" Padding="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" x:Name="ResetButton" Content="↺ Tilbakestill" 
                        Click="ResetButton_Click" Style="{StaticResource PrefsButton}" 
                        Width="120" Margin="0,0,10,0"/>

                <Button Grid.Column="2" x:Name="SaveButton" Content="💾 Lagre" 
                        Click="SaveButton_Click" Width="100" Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PrefsButton}">
                            <Setter Property="Background" Value="#00ff88"/>
                            <Setter Property="Foreground" Value="#1a1a2e"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="3" x:Name="CloseButton" Content="✕ Lukk" 
                        Click="CloseButton_Click" Width="80">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PrefsButton}">
                            <Setter Property="Background" Value="#ff4757"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>