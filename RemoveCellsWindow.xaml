<Window x:Class="FilterV1.RemoveCellsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remove Cell Pairs" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="PasteTextBox" Width="300" Margin="5" Text="Paste cell pairs here..." GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" PreviewKeyDown="PasteTextBox_PreviewKeyDown"/>
            <Button x:Name="AddButton" Click="AddButton_Click" Content="Add" Width="50" Margin="5"/>
        </StackPanel>

        <!-- DataGrid for Cell Pairs -->
        <DataGrid x:Name="CellPairsGrid" Grid.Row="1" Margin="5" AutoGenerateColumns="False" SelectionMode="Extended" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Cell" Binding="{Binding FirstCell}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Second Cell" Binding="{Binding SecondCell}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Button Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="RemoveButton" Click="RemoveButton_Click" Content="Remove Selected" Width="100" Margin="5"/>
            <Button x:Name="ApplyButton" Click="ApplyButton_Click" Content="Apply" Width="80" Margin="5"/>
            <Button x:Name="CancelButton" Click="CancelButton_Click" Content="Cancel" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>